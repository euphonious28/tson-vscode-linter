{
    "name": "tson-linter",
    "displayName": "TSON Linter",
    "description": "Linter for TSON- A markup for testing APIs that uses JSON",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.55.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:tson"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "tson",
                "aliases": [
                    "TSON"
                ],
                "extensions": [
                    ".tson"
                ]
            }
        ],
        "configuration": {
            "type": "object",
            "title": "LSP-Client for TSON",
            "properties": {
                "languageServerPslTest.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd .."
    },
    "dependencies": {},
    "devDependencies": {
        "@types/node": "^12.12.0",
        "typescript": "^4.2.3"
    },
    "configurationDefaults": {
        "[languageId]": {
            "editor.semanticHighlighting.enabled": true
        }
    }
}
